<tal:doctype tal:omit-tag="">
  <!DOCTYPE html
  PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="de" lang="de"
    i18n:domain="zeit.cms">
<head>
  <title>vivi Login</title>
</head>
<body>
  <div id="loginform">
    <form method="post" action=".">
      <input type="hidden" name="camefrom"
             tal:condition="view/camefrom"
             tal:attributes="value view/camefrom" />

      <div>
        <label for="login" i18n:translate="">Username:</label>
        <span class="field">
          <input type="text" name="login" id="login"/>
        </span>
      </div>

      <div>
        <label for="login" i18n:translate="">Password:</label>
        <span class="field">
          <input type="password" name="password" id="password"/>
        </span>
      </div>

      <div>
        <input
           class="button" type="submit" name="SUBMIT" value="Log in"
           i18n:attributes="value" />
      </div>
    </form>

    <p class="error"
       tal:condition="python: not view.authenticated and view.submitted"
       i18n:translate="">
      Login failed.
    </p>

    <script type="text/javascript">
      document.getElementById("login_field").focus();
    </script>
  </div>
</body>
</html>
</tal:doctype>
